# Arke Backend API (FastAPI on IPFS Server)
# Used for: /events, /snapshot/latest, /entities (listing)
BACKEND_API_URL=https://ipfs-api.arke.institute

# Arke Wrapper API (Cloudflare Worker)
# Used for: /entities/{pi}, /upload, /cat/{cid}, entity CRUD
ARKE_API_URL=https://api.arke.institute

# Pinecone Integration
# Set to 'true' to enable real-time Pinecone indexing
ENABLE_PINECONE=true

# OpenAI (Required if ENABLE_PINECONE=true)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Pinecone (Required if ENABLE_PINECONE=true)
# Get your API key from: https://app.pinecone.io/
PINECONE_API_KEY=pcsk_...
PINECONE_INDEX_NAME=arke-institute

# Pinecone Configuration (Optional, defaults to ./config/nara-config.json)
CONFIG_PATH=./config/nara-config.json

# Optional
NODE_ENV=production
LOG_LEVEL=info
